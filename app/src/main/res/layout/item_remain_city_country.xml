<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remain_city_country_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/remain_city_country_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:contentDescription="@string/descriptionImageCountryCity"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_placeholder_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remain_city_country_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline2"
                tools:text="Title" />

            <TextView
                android:id="@+id/remain_city_country_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/colorTitleRanking"
                tools:text="Message" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>